<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../head.ejs') %>
    <title>Player Detail</title>
  </head>
  <body>
    <div class="container mt-5">
      <h3>Player Detail</h3>
      <a href="/dashboard/users"><< Back to Players list</a>
      <div class="alert alert-info mt-3" role="alert">
        <p>
          Click <strong>UPDATE</strong> to update user info.
          Click <strong>DELETE</strong> to delete user.
        </p>
      </div>
      <div class="row mt-5">
        <a href="/dashboard/users/update/<%= user.id %>">
          <button class="btn btn-outline-success">Update</button>
        </a>
        <form method="POST" action="/dashboard/users/<%= user.id %>?_method=DELETE">
          <button class="btn btn-outline-danger">Delete</button>
        </form>
      </div>
      <h5 class="mt-3">Details</h5>
      <table class="table mt-3">
        <tbody>
          <tr>
            <th>Id</th>
            <td><%= user.id %></td>
          </tr>
          <tr>
            <th>Username</th>
            <td><%= user.username %></td>
          </tr>
          <tr>
            <th>Email</th>
            <td><%= user.email %></td>
          </tr>
          <tr>
            <th>Password</th>
            <td><%= user.password %></td>
          </tr>
          <tr>
            <th>First Name</th>
            <td><%= user.UserBio.firstname %></td>
          </tr>
          <tr>
            <th>Last Name</th>
            <td><%= user.UserBio.lastname %></td>
          </tr>
          <tr>
            <th>City</th>
            <td><%= user.UserBio.city %></td>
          </tr>
        </tbody>
      </table>
      <h5>Activities</h5>
      <table class="table mt-3">
        <thead>
          <tr>
            <th>winStatus</th>
            <th>score</th>
            <th>Last login</th>
          </tr>
        </thead>
        <tbody>
          <% user.UserHistories.forEach(info => { %>
          <tr>
            <td><%= info.winStatus %></td>
            <td><%= info.score %></td>
            <td><%= info.last_login %></td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </body>
</html>
